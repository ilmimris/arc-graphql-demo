generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model User {
  email  String  @unique
  id     Int     @default(autoincrement()) @id
  name   String?
  posts   Post[]
  salary Salary?
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @default(autoincrement()) @id
  published Boolean @default(false)
  title     String
  user      User?   @relation(fields: [authorId], references: [id])
}

model Salary {
  id     Int   @default(autoincrement()) @id
  salary Int
  userId Int?  @unique
  User   User? @relation(fields: [userId], references: [id])
}